{% extends 'base.html.twig' %}
{% block body %}
	{% if app.user %}
    {% if app.user.title=='administrator' %}
       {% include('security/usernavbar.html.twig') %}
        <!-- Page Wrapper -->
            <div class="page-wrapper">

				<!-- Page Content -->
                <div class="content container-fluid">
					<div class="row">
						<div class="col-md-8 ">

							<!-- Page Header -->
							<div class="page-header">
								<div class="row">
									<div class="col-sm-12">
										<h3 class="page-title">Theme Settings</h3>
									</div>
								</div>
							</div>
							<!-- /Page Header -->

						  {{ form_start(form) }}
								<div class="form-group row">
										<label class="col-lg-3 col-form-label">{{ form_label(form.websitename,'Website Name') }}</label>
									<div class="col-lg-9">
										{{ form_widget(form.websitename) }}
									</div>
									</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(form.lightlogo,'Light logo') }}</label>
									<div class="col-lg-7">
										{{ form_widget(form.lightlogo) }}
										<span class="form-text text-muted">Recommended image size is 40px x 40px</span>
									</div>
									<div class="col-lg-2">
										<div class="float-right">

											      {% if  themes.lightlogo | length !=0 %}
                                                                   <img src="{{ asset('/themsetting/' ~ themes.lightlogo ) }}" alt="" width="120" height="40" />
												  {% else %}
                                                                    <img src="{{ asset('img/users.png') }}" alt="" width="120" height="40"/>
												  {% endif %}

									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(form.favicon,'Favicon') }} &nbsp;</label>
									<div class="col-lg-7">
										{{ form_widget(form.favicon) }}
										<span class="form-text text-muted">Recommended image size is 120px x 40px</span>
									</div>
									<div class="col-lg-2">
										<div class="float-right">

											      {% if  themes.favicon| length !=0 %}
                                                                   <img src="{{ asset('/themsetting/' ~ themes.favicon) }}" alt="" width="40" height="40"/>
												  {% else %}
                                                                    <img src="{{ asset('img/users.png') }}" alt="" width="40" height="40"/>
												  {% endif %}

											</div>
									</div>
								</div>
								<div class="submit-section">
									{{ form_row(form.save) }}
								</div>
							  {{ form_end(form) }}
						</div>
					</div>
                </div>
				<!-- /Page Content -->

            </div>
			<!-- /Page Wrapper -->


    {% endif %}
    {% endif %}
{% endblock %}