{% extends 'base.html.twig' %}
{% block body %}
    <!--if start-->
     {% if app.user %}
		{% include('security/usernavbar.html.twig') %}
<!-- Page Wrapper -->
            <div class="page-wrapper">

				<!-- Page Content -->
                <div class="content container-fluid">

					<!-- Page Header -->
					<div class="page-header" style="padding-top:20px; ">
						<div class="row">
							<div class="col">
								<h3 class="page-title">Leave Settings</h3>
								<ul class="breadcrumb">
									<li class="breadcrumb-item">Dashboard</li>
									<li class="breadcrumb-item active">Leave Settings</li>
								</ul>
							</div>
						</div>
					</div>
					<!-- /Page Header -->
				<div class="row">
						<div class="col-md-12">
                        {% if findleavestype|length !=0 %}
							<!-- Annual Leave -->
							{% for lead in findleavestype %}
							<div class="card leave-box" id="leave_annual">
								<div class="card-body">
									<div class="h3 card-title with-switch">
										{{ lead.name }}
										{% if lead.lstatus=='active' %}
										<div class="onoffswitch">
											<input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="switch_annual" checked>
											<label class="onoffswitch-label" for="switch_annual">
												<a href="/leaves/settings/switch/off/{{lead.id}}" role="button" class="onoffswitch-inner"></a>
											</label>
										</div>
										{% else %}
											<div class="onoffswitch">
											<input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="switch_annual">
											<label class="onoffswitch-label" for="switch_annual">
												<a href="/leaves/settings/switch/{{lead.id}}" role="button" class="onoffswitch-inner"></a>
											</label>
										</div>
										{% endif%}
									</div>
									<div class="leave-item">

										<!-- Annual Days Leave -->
										<div class="leave-row">
											<div class="leave-left">
												<div class="input-box">
													<div class="form-group">
														<label>Days</label>
														<input type="text" class="form-control" value="{{ lead.ldays }}" disabled>
													</div>
												</div>
											</div>
										</div>
										<!-- /Annual Days Leave -->


									</div>


								</div>
							</div>
							<!-- /Annual Leave -->
                            {% endfor %}
						{% else %}
                           	<div class="card leave-box" id="leave_annual">
								<div class="card-body">
									<div class="h5 card-title with-switch">
										<span style="color: red;">No available setting please add leaves type to proceed</span>
									</div>
								</div>
							</div>
							<!-- /Annual Leave -->
						{% endif %}
						</div>
					</div>
				<!-- /Page Content -->

            </div>
			<!-- /Page Wrapper -->
			</div>


    {% endif %}
    <!-- end if-->

{% endblock %}
