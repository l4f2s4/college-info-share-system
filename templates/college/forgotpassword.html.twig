{% extends 'base.html.twig'%}

{% block title %}Welcome To COAF Forgot Password Area{% endblock %}

{% block body %}
 <div class="account-page">
		<!-- Main Wrapper -->
        <div class="main-wrapper">
			<div class="account-content">
                <div class="container">
                         <h3 class="account-title">University of Dar es salaam</h3>
                         <div class="account-logo">
                		 <img src="{{asset('/img/udsm.png')}}">
                         </div>
                         <div class="account-box">
                             <div class="account-wrapper">
							<p class="account-subtitle">Enter your email to get a password reset link</p>

							<!-- Account Form -->
							<form method="post">
								{% for messages in app.flashes('verify') %}
								  <div class="alert alert-danger">
                                             {{ messages }}
								  </div>
					            {% endfor %}
							    <div class="form-group">
									<input class="form-control" name="kind" type="email" placeholder="Email Address" style="border-radius:0;">
								</div>
								<div class="form-group text-center">
									<button class="account-lost" type="submit" style="color:white;">Reset Password</button>
								</div>
								<div class="account-footer">
									<p>Remember your password? <br/><a href="{{ path('app_login') }}">Login</a></p>
								</div>
							</form>
							<!-- /Account Form -->

						</div>
					</div>
				</div>
			</div>
        </div>
		<!-- /Main Wrapper -->
 </div>
{% endblock  %}